# === OPENAI / DEEPSEEK (OpenAI-Compatible) ===
OPENAI_API_KEY=your-openai-or-deepseek-key         # Use OpenAI or DeepSeek key here
OPENAI_BASE_URL=https://api.openai.com/v1          # For OpenAI (default)
# OPENAI_BASE_URL=https://api.deepseek.com/v1      # For DeepSeek (uncomment to use DeepSeek)

# === ANTHROPIC ===
ANTHROPIC_API_KEY=your-anthropic-key

# === OLLAMA (Local LLMs) ===
OLLAMA_URL=http://localhost:11434/api/generate

# === HUGGINGFACE ===
HUGGINGFACE_TOKEN=your-huggingface-token

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id             # (optional, for sending messages)

# === DISCORD BOT ===
DISCORD_BOT_TOKEN=your-discord-bot-token

# === FASTAPI ===
API_HOST=0.0.0.0
API_PORT=8000

# === DATABASE / MONGODB ===
MONGODB_URI=mongodb://localhost:27017              # (if you use MongoDB)

# === SUPERVISOR ===
SUPERVISOR_USERNAME=admin
SUPERVISOR_PASSWORD=change-me

# === EMAIL / SMTP (optional for reports) ===
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=yourpassword
EMAIL_TO=your@email.com

# === OTHER SERVICE KEYS (OPTIONAL) ===

# For Playwright (browser automation)
PLAYWRIGHT_BROWSERS_PATH=0

# For Celery (distributed task queue)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For any external APIs you want to connect (add as needed)
# EXTERNAL_API_KEY=your-key-here

# === LOGGING ===
LOG_LEVEL=INFO

# === SUPERAGENT MODE ===
PRO_MODE=false

# === (Add more as needed for your own integrations)
